set fenc=utf-8
set nobackup
set noswapfile
set showcmd

set number
set cursorline
set smartindent
set showmatch
syntax enable
set expandtab
set tabstop=4
set shiftwidth=4

inoremap <C-e> <Esc>$a
inoremap <C-a> <Esc>^i
inoremap <C-g> <Esc>
noremap <C-g> <Esc>
noremap <C-e> <Esc>$
noremap <C-a> <Esc>^
noremap ; :
